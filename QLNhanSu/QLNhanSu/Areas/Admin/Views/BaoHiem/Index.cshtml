@model IEnumerable<QLNhanSu.Models.BaoHiem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bảo Hiểm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoiKhamBenh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoBaoHiem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.TenNV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoiKhamBenh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoBaoHiem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.TenNV)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaBH }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaBH }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaBH })
        </td>
    </tr>
}

</table>
