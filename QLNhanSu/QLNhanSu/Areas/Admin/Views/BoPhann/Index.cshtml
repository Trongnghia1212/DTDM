@model IEnumerable<QLNhanSu.Models.BoPhann>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bộ Phận</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenBoPhan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenBoPhan)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaBoPhan }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaBoPhan }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaBoPhan })
        </td>
    </tr>
}

</table>
